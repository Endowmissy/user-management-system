{
  "name": "user-management-system",
  "version": "1.0.0",
  "description": "A user management system api",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc -p .",
    "knex": "./node_modules/.bin/knex --knexfile src/database/knexfile.ts",
    "prestart": "npm run build",
    "start": "npm run migration && node -r ts-node/register/transpile-only ./dist/index.js",
    "migration": "npx knex migrate:latest --knexfile=src/database/knexfile.ts",
    "migration:rollback": "npx knex migrate:rollback --knexfile src/database/knexfile.ts",
    "seed:db": "knex seed:run",
    "test": "jest --no-cache --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Endowmissy/user-management-system.git"
  },
  "author": "Ayomikun Emmanuel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Endowmissy/user-management-system/issues"
  },
  "homepage": "https://github.com/Endowmissy/user-management-system#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "knex": "^3.1.0",
    "knex-paginate": "^3.2.0",
    "sqlite3": "^5.1.7",
    "typescript": "^5.8.2",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/knex": "^0.16.1",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-prettier": "^5.2.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  }
}
